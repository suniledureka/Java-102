<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd">
						
	<!--  value as an attribute -->
	<bean id="user1" class="co.edureka.spring.core.beans.User">
		<property name="firstName" value="Sanjay"/>
		<property name="lastName" value="Patil"/>
	</bean>
	
	<!--  value as an element -->
	<bean id="user2" class="co.edureka.spring.core.beans.User">
		<property name="firstName">
		   <value>Praveen</value>
		</property>   
		<property name="lastName">
		   <value>Kumar</value>
		</property>   
	</bean>	
	
	<!-- value through name spaces -->
	<bean id="user3" class="co.edureka.spring.core.beans.User" p:firstName="Manoj" p:lastName="Rao"/>
	
	<bean id="user4" class="co.edureka.spring.core.beans.User">
		<constructor-arg value="Sachin"></constructor-arg>
		<constructor-arg value="Tendulkar"/>
	</bean>
</beans>
